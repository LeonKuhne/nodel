#!/bin/bash
title "nodel"
help .cd | indent

function run() {
  if [ ! -d "dist" ]; then; mkdir dist; fi
  build
  $(
    cd dist
		python3 -m http.server
  )
}

function build() {
  npm run build
}

function release() {
  if [ ! -d "dist" ]; then; mkdir dist; fi
  npm run release
	(
		cd dist 
		git init
		git add . 
		git commit -m "releasing" 
		git checkout -b gh-pages
		git remote add release git@github.com:LeonKuhne/nodel.git
		git push release gh-pages --force
	)
}
